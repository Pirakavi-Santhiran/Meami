@model Meami.Models.Order
@{
   Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Order", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{

    @Html.HiddenFor(model => model.Id)
    <div class="form-group" style="margin-bottom: 10px">
        <label class="control-label col-md-4">
            Order Code
        </label>
        <div class="col-md-8" style="margin-bottom: 10px">
            @Html.EditorFor(model => model.OrderCode, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.ValidationMessageFor(model => model.OrderCode)
    </div>

    <div class="form-group" style="margin-bottom: 10px">
        <label class="control-label col-md-4">
            Customer Name
        </label>
        <div class="col-md-8" style="margin-bottom: 10px">
            @Html.DropDownListFor(model => model.CustomerId, ViewBag.CustomerList as SelectList, "--Select Customer--", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group" style="margin-bottom: 10px">
        <label class="control-label col-md-4">
            Product Name
        </label>
        <div class="col-md-8" style="margin-bottom: 10px">
            @Html.DropDownListFor(model => model.ProductId, ViewBag.ProductList as SelectList, "--Select Product--", new { @class = "form-control" })
        </div>
    </div>


    <div class="form-group" style="margin-bottom: 50px">
        <label class="control-label col-md-4">
            Product Count
        </label>
        <div class="col-md-8" style="margin-bottom: 10px">
            @Html.EditorFor(model => model.ProductCount, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.ValidationMessageFor(model => model.ProductCount)
    </div>
    <br />
    <div class="form-group" style="margin-top:10px; margin-bottom: 10px; float:right">
        <div class="col-md-12">
            <input type="submit" value="Submit" class="btn add-button" />
            <input type="reset" value="Reset" class="btn btn-secondary" />
        </div>
    </div>
}


